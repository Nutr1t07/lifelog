<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_event_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Event Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_event_sec_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/event_sec_name"
        app:layout_constraintBottom_toBottomOf="@+id/item_event_name_text"
        app:layout_constraintStart_toEndOf="@+id/item_event_name_text"
        app:layout_constraintTop_toTopOf="@+id/item_event_name_text" />

    <ImageView
        android:id="@+id/item_event_type_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_event_name_text"
        app:layout_constraintTop_toBottomOf="@+id/item_event_name_text" />

    <TextView
        android:id="@+id/item_event_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Study"
        app:layout_constraintBottom_toBottomOf="@+id/item_event_type_imageView"
        app:layout_constraintStart_toEndOf="@+id/item_event_type_imageView"
        app:layout_constraintTop_toTopOf="@+id/item_event_type_imageView" />

    <TextView
        android:id="@+id/item_event_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="10:00 ~ 12:00"
        app:layout_constraintBottom_toBottomOf="@+id/item_event_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_event_name_text" />

    <TextView
        android:id="@+id/item_event_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hours 30 mins"
        app:layout_constraintEnd_toEndOf="@+id/item_event_time_text"
        app:layout_constraintStart_toStartOf="@+id/item_event_time_text"
        app:layout_constraintTop_toTopOf="@+id/item_event_type_text" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>